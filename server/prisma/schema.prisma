enum Type {
  SA
  SL
}

enum Category {
  ACCOUNTS
  BOOKS
  APPOINTMENT
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

enum Body {
  BOD
  J_D
  J_S_D
  S_D
  SH
  S_SH
  AU
}

