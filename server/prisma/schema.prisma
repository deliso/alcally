generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid()) 
  email     String     @unique
  password  String
  // companies Company[]
  // name      String
  // surname   String
}

model Company {
  id          String   @id @default(cuid()) 
  name        String   @unique
  type        Type
  audit       Boolean
  year_end    Int
  actions     Action[] 
  nif         String @unique
  cnae        String
  sole        Boolean
  mgmt        Body
  mgmt_rem    Boolean
  // user      User @relation(fields: [userId], references: [id])
  // userId    Int @unique
  // incDate   DateTime
  // yearStart DateTime 
  // country   String
  // city      String
  // postcode  Int
  // city      String
  // mgmt_no   Int
  // persons   Person[]
}

model Action {
  id           String @id @default(cuid()) 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  due_date      Int
  name          String
  company       Company @relation(fields: [companyId], references: [id], onDelete: Cascade) 
  companyId     String
  completed     Boolean  @default(false)
  hidden        Boolean  @default(false)
  category  Category
  frequency Frequency
  // title     String   @db.VarChar(255)
  // body      Body
  // comments  String
}

